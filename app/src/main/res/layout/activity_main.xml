<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

<ProgressBar
    android:id="@+id/progresseBar"
    android:visibility="gone"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">


        <ImageView
            android:layout_marginBottom="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ubci" />

        <EditText
            android:lines="1"
            android:maxLines="1"
            android:text="rh_slc@outlook.com"
            android:id="@+id/email"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_et_email"
            android:drawablePadding="10dp"
            android:hint="Email"
            android:padding="15dp"
            android:textColor="@color/ubcdi_nuance_1"
            android:imeOptions="actionNext"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white"/>

        <EditText
            android:text="adminadmin"
            android:lines="1"
            android:maxLines="1"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/shape_et_email"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:padding="15dp"
            android:textColor="@color/ubcdi_nuance_1"
            android:textColorHighlight="@color/white"
            android:textColorHint="@color/white" />


        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textAllCaps="false"
            android:layout_marginTop="0dp"
            android:background="@drawable/shape_btn_login"
            android:padding="15dp"
            android:shadowColor="@android:color/transparent"
            android:text="Connexion" />

        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:textAllCaps="false"
            android:layout_marginRight="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/shape_btn_signup"
            android:padding="15dp"
            android:shadowColor="@android:color/transparent"
            android:text="S'inscrire"
            android:textColor="@color/ubcdi_nuance_1" />


    </LinearLayout>



</RelativeLayout>